<!--Run with runjob.sh-->
<Request>
	<Variable name="ebeam" value="1pt05"/>
    <Name name="recon-tritrig_${trigger}_${ebeam}"/>
	<Project name="hps"/>
	<Track name="simulation"/>
	<Email email="btu29@wildcats.unh.edu" request="false" job="true" />
    <Memory space="3000" unit="MB"/>
    <!--<TimeLimit time="12" unit="hours"/>-->
    <!--<DiskSpace space="5" unit="GB"/>-->
    <OS name="centos7"/>
    <Variable name="hps-java" value="/u/group/hps/hps_soft/git/hps-java/distribution/target/hps-distribution-3.11-SNAPSHOT-bin.jar"/>
    <Variable name="log_dir" value="file:/volatile/hallb/hps/logDump/postTriSummitFixes/logs/recon/moller"/>
    <Variable name="dq_dir" value="file:/work/hallb/hps/mc_production/logs/postTriSummitFixes/data_quality/recon/moller"/>
	<Variable name="out_dir" value="mss:/mss/hallb/hps/production/postTriSummitFixes/recon/moller"/>
        <!--<Variable name="detector"  value="HPS-EngRun2015-Nominal-v5-0-fieldmap"/>-->
        <Variable name="detector"  value="HPS-PhysicsRun2016-Nominal-v5-0-fieldmap"/>
        <!--<Variable name="detector"  value="HPS-EngRun2015-1_5mm-v4-4-fieldmap"/>-->
	<Variable name="tag"   value="3.11-20170331"/>
	<Variable name="out_file" value="molv3_5mrad_10to1"/>
	<Variable name="trigger" value="singles0"/>
        <Variable name="run" value="7984"/>
	<Variable name="steering" value="PhysicsRun2016FullRecon.lcsim"/>
	<Variable name="dqmsteer"   value="/org/hps/steering/production/DataQualityReconMC.lcsim"/>
	<Variable name="dstmaker" value="/u/group/hps/hps_soft/hps-dst/centos7-64/bin/dst_maker"/>
	<Variable name="dstdir"   value="mss:/mss/hallb/hps/production/postTriSummitFixes/dst/moller"/>
        <Variable name="tupledir"   value="mss:/mss/hallb/hps/production/postTriSummitFixes/ntuple/moller"/>
	<List name="num">1</List>
	<ForEach list="num">
		<Job>
                  <Input src="mss:/mss/hallb/hps/production/postTriSummitFixes/readout/moller/${ebeam}/${tag}/molv3_5mrad_10to1_${detector}_${tag}_run${run}_${trigger}_${num}.slcio" dest="in.slcio" />
			<Command><![CDATA[
				ln -s /u/group/hps/hps_soft/fieldmaps fieldmap
				echo "Auger ID: $AUGER_ID"
      
                /usr/bin/time /apps/scicomp/java/jdk1.7/bin/java -DdisableSvtAlignmentConstants -XX:+UseSerialGC -Xmx500m -jar ${hps-java} -r /org/hps/steering/recon/${steering} -i in.slcio -DoutputFile=out -Ddetector=${detector} -Drun=${run}
                
                echo "Running DQM #1 ..."
                /usr/bin/time /apps/scicomp/java/jdk1.7/bin/java -DdisableSvtAlignmentConstants -XX:+UseSerialGC -Xmx500m -jar ${hps-java} -r /org/hps/steering/production/DataQuality.lcsim -i out.slcio > data_quality.txt
            
                echo "Running DQM #2 ..."
		/usr/bin/time /apps/scicomp/java/jdk1.7/bin/java -DdisableSvtAlignmentConstants -XX:+UseSerialGC -Xmx1000m -jar ${hps-java} -r ${dqmsteer} -DoutputFile=dqm -i out.slcio

                source /u/group/hps/hps_soft/setup_dst.csh

                echo "Making DSTs ..."
		${dstmaker} out.slcio -o dst.root

                echo "Making tuples ..."
                java -jar ${hps-java} -r /org/hps/steering/analysis/MakeTuplesMC.lcsim -i out.slcio -DoutputFile=tuple
        

                python /work/hallb/hps/holly/tuples/makeTree.py tuple_fee.root tuple_fee.txt
                python /work/hallb/hps/holly/tuples/makeTree.py tuple_moller.root tuple_moller.txt
                python /work/hallb/hps/holly/tuples/makeTree.py tuple_tri.root tuple_tri.txt

				]]></Command>
            <Output src="out.slcio" dest="${out_dir}/${ebeam}/${tag}/${out_file}_${detector}_${tag}_run${run}_${trigger}_${num}.slcio"/>
            <Output src="data_quality.txt" dest="${dq_dir}/${ebeam}/${tag}/${out_file}_${detector}_${tag}_run${run}_${trigger}_${num}.txt"/>
            <Output src="dqm.root" dest="${dq_dir}/${ebeam}/${tag}/${out_file}_${detector}_${tag}_run${run}_${trigger}_${num}.root"/>
            <Output src="dst.root" dest="${dstdir}/${ebeam}/${tag}/${out_file}_${detector}_${tag}_run${run}_${trigger}_${num}.root"/>
            <Output src="tuple_fee.root" dest="${tupledir}/${ebeam}/${tag}/fee/${out_file}_${detector}_${tag}_run${run}_${trigger}_${num}.root"/>
            <Output src="tuple_moller.root" dest="${tupledir}/${ebeam}/${tag}/moller/${out_file}_${detector}_${tag}_run${run}_${trigger}_${num}.root"/>
            <Output src="tuple_tri.root" dest="${tupledir}/${ebeam}/${tag}/tri/${out_file}_${detector}_${tag}_run${run}_${trigger}_${num}.root"/>
			<Stderr dest="${log_dir}/${ebeam}/${tag}/${out_file}_${detector}_${tag}_run${run}_${trigger}_${num}.err" />
			<Stdout dest="${log_dir}/${ebeam}/${tag}/${out_file}_${detector}_${tag}_run${run}_${trigger}_${num}.out" />
		</Job>
	</ForEach>
</Request>
