#!/bin/sh

setenv PATH @CMAKE_INSTALL_PREFIX@/bin:$PATH

setenv HPSMC_DIR @CMAKE_INSTALL_PREFIX@
setenv HPSMC_DATA_DIR @CMAKE_INSTALL_PREFIX@/share/
setenv HPSMC_DETECTOR_DIR @CMAKE_INSTALL_PREFIX@/share/detectors
setenv HPSMC_FIELDMAPS_DIR @CMAKE_INSTALL_PREFIX@/share/fieldmaps

if (! $?PYTHONPATH) then       
    setenv PYTHONPATH ""
endif
setenv PYTHONPATH @CMAKE_INSTALL_PREFIX@/lib/python:$PYTHONPATH

setenv EGS5_DATA_DIR @EGS5_DATA_DIR@
setenv EGS5_CONFIG_DIR @EGS5_CONFIG_DIR@

setenv MG4_DIR @MG4_DIR@

setenv MG5_DIR @MG5_DIR@

setenv HPSJAVA_JAR @CMAKE_INSTALL_PREFIX@/lib/hps-distribution-@HPSJAVA_PROJECT_VERSION@-bin.jar

setenv LCIO_JAR @LCIO_JAR@
