#!/usr/bin/env bash

print_jobs() {
    echo "Available job names:"
    for j in $(ls @CMAKE_INSTALL_PREFIX@/lib/python/jobs/*_job.py); do
        jn=$(basename $j | sed s/_job.py//g)
        echo "  $jn"
    done
}

if [ "$#" -lt 2 ]; then
    echo "Usage: hps-mc-job [job_name] [args]"
    print_jobs
    exit 1
fi

job_name=$1
shift
args=$@

job_script=@CMAKE_INSTALL_PREFIX@/lib/python/jobs/${job_name}_job.py
#echo job_script=$job_script
if [ -f "$job_script" ]; then
    cmd="python $job_script $@"
    echo "Executing: $cmd"
    exec $cmd
else 
    echo "ERROR: No job script exists for '${job_name}' in '@CMAKE_INSTALL_PREFIX@/lib/python/jobs' dir."
    print_jobs
fi
